{
  "name": "vmware-mcp",
  "version": "1.0.0",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "bun run src/index.ts",
    "ui": "npx @modelcontextprotocol/inspector bun run start",
    "dev": "bun --watch run src/index.ts",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "docker:build": "DOCKER_BUILDKIT=1 docker buildx build --load -t vmware-mcp .",
    "docker:build:ci": "DOCKER_BUILDKIT=1 docker buildx build --load --platform linux/amd64 -t vmware-mcp .",
    "lint:fix": "biome lint --fix .",
    "typecheck": "tsc --noEmit",
    "check": "biome check . && tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@toon-format/toon": "^2.1.0",
    "fuse.js": "^7.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@types/bun": "latest",
    "typescript": "latest"
  }
}
